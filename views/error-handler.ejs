<%- include('partials/header.ejs'); -%>

<script>
  if ("<%= type %>" === "room-code") {
    alert("Room with code <%= error %> not found. Please try again.");
    window.location.href = "/";
  } else if ("<%= type %>" === "duplicate-name") {
    alert(
      "The name <%= error %> is already taken, please enter your fullname or choose a different name"
    );
    window.location.href = "/";
  } else if ("<%= type %>" === "the-game-has-started") {
    alert("The game for room: <%= error %> has already started!");
    window.location.href = "/";
  }
</script>

